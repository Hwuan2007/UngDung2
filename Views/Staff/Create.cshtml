@model hocvieccuccangMVC.Models.NhanVien

<div class="modal fade" id="addEmployeeModal" tabindex="-1" aria-labelledby="addEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addEmployeeModalLabel">Thêm Nhân viên mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> <!-- Thêm nút đóng -->
            </div>
            <div class="modal-body">      
                <form method="post" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="HoTen" class="control-label">Tên người dùng:</label>
                                <input asp-for="HoTen" type="text" placeholder="Nhập Họ và Tên" class="form-control" required />
                                <span asp-validation-for="HoTen" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="NgaySinh" class="control-label">Ngày Sinh:</label>
                                <input asp-for="NgaySinh" type="text" placeholder="Nhập Ngày Sinh (dd/mm/yyyy)" class="form-control" required />
                                <span asp-validation-for="NgaySinh" class="text-danger error-message"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="SoDienThoai" class="control-label">Số điện thoại:</label>
                                <input asp-for="SoDienThoai" type="text" placeholder="Nhập Số Điện Thoại" class="form-control" required pattern="\d{10,11}" title="Vui lòng nhập số điện thoại hợp lệ (10 hoặc 11 chữ số)." />
                                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                            </div>
                            <br />
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DiaChi" class="control-label">Địa chỉ:</label>
                                <input asp-for="DiaChi" type="text" placeholder="Nhập Địa Chỉ" class="form-control" required />
                                <span asp-validation-for="DiaChi" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="ChucVu" class="control-label">Chức vụ:</label>
                                <input asp-for="ChucVu" type="text" placeholder="Nhập Chức vụ" class="form-control" required />
                                <span asp-validation-for="ChucVu" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="SoNamCongTac" class="control-label">Số Năm Công tác:</label>
                                <input asp-for="SoNamCongTac" type="number" placeholder="Nhập Số năm công tác" class="form-control" required />
                                <span asp-validation-for="SoNamCongTac" class="text-danger"></span>
                            </div>
                            <br />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="btn-chance">
                            <div class="form-group">
                                <button type="submit" class="green-btn"> Lưu </button>
                                <button type="button" class="red-btn"data-bs-dismiss="modal" aria-label="Close">Hủy</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/js/ValidDate.js"></script>
<script src="~/js/DuplicateCheck.js"></script>
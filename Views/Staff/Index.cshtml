
@model hocvieccuccangMVC.ViewModels.NhanVienViewModel
@using X.PagedList.Mvc.Core;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/css/StaffLayout.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />

</head>
<body>
    <div>
        <div class="content">
            <div class="container-fluid" style="padding: 50px 200px;">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Danh Sách Nhân Viên</h4>
                                <br />
                                <div>
                                    <button type="button" class="green-btn" data-bs-toggle="modal" data-bs-target="#addEmployeeModal">
                                        <i class="bx bxs-plus-circle"></i>
                                        Thêm Nhân viên mới
                                    </button>
                                    
                                    <div class="form-group" id="Search">
                                        <input type="text" id="searchInput" placeholder="Tìm kiếm" class="form-control" />
                                        <button class="green-btn" onclick="search()">
                                            <i class='bx bx-search' style="vertical-align: middle;"></i>
                                            Tìm Kiếm
                                        </button>
                                    </div>
                                </div>

                                <br />
                                <p id="message" style="color: red;">@TempData["Message"]</p>
                            </div>

                            <div class="content table-responsive table-full-width ">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Mã nhân viên</th>
                                            <th>Họ tên</th>
                                            <th>Ngày sinh</th>
                                            <th>Số điện thoại</th>
                                            <th>Địa chỉ</th>
                                            <th>Chức vụ</th>
                                            <th>Số năm công tác</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>

                                        <div id="employeeList">
                                            @Html.Partial("_EmployeeTablePartial", Model.DanhSachNhanVien)
                                        </div>
                                </table>
                            </div>
                            <!-- Modaladd -->
                            @Html.Partial("Create", Model.NhanVien)
                            <!-- Modaledit -->
                            @Html.Partial("Edit", Model.NhanVien)
                            
<div class="text-center" style="display:flex;justify-content:center">
    <nav aria-label="Page navigation" >
        <ul class="pagination">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
            <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1 })" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/js/SearchStaff.js"></script>
<script src="~/js/ConfirmDelete.js"></script>
<script src="~/js/DeleteMessage.js"></script>
<script src="~/js/editEmployee.js"></script>

<script>
$(document).ready(function () {
    // Hàm loadEmployeeList sẽ được gọi khi click vào một trang mới
    function loadEmployeeList(page) {
        $.ajax({
            url: '@Url.Action("GetPartialEmployeeList", "Staff")',
            type: 'GET',
            data: { page: page },
            success: function (result) {
                $('#employeeList').html(result); // Cập nhật phần danh sách nhân viên
            },
            error: function (xhr, status, error) {
                console.error(xhr.responseText);
            }
        });
    }

    // Sự kiện click trên các liên kết chuyển trang trong phần tử .pagination
    $(document).on('click', '.pagination .page-link', function (event) {
        event.preventDefault(); // Ngăn chặn hành động mặc định của thẻ a
        var page = $(this).data('page'); // Lấy số trang từ thuộc tính data-page của thẻ a
        loadEmployeeList(page); // Gọi hàm loadEmployeeList để cập nhật danh sách nhân viên
    });

    // Gọi hàm loadEmployeeList khi trang được load lần đầu tiên
    loadEmployeeList(1);
});

</script>


@model hocvieccuccangMVC.ViewModels.NhanVienViewModel
@using X.PagedList;


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/css/StaffLayoutss.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />

</head>
<body>
    <div>
        <div class="content">
            <div class="container-fluid" style="padding: 50px 200px;">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Danh Sách Nhân Viên</h4>
                                <br />
                                <div>
                                    <button type="button" class="green-btn" data-bs-toggle="modal" data-bs-target="#addEmployeeModal">
                                        <i class="bx bxs-plus-circle"></i>
                                        Thêm Nhân viên mới
                                    </button>
                                    
                                    <div class="form-group" id="Search">
                                        <input type="text" id="searchInput" placeholder="Tìm kiếm" class="form-control" />
                                        <button class="green-btn" onclick="search()">
                                            <i class='bx bx-search' style="vertical-align: middle;"></i>
                                            Tìm Kiếm
                                        </button>
                                    </div>
                                </div>

                                <br />
                                <p id="message" style="color: red;">@TempData["Message"]</p>
                            </div>

                            <div class="content table-responsive table-full-width ">
                                @Html.Partial("_EmployeeList", Model.DanhSachNhanVien)
                            </div>
                            <!-- Modaladd -->
                            @Html.Partial("Create", Model.NhanVien)
                            <!-- Modaledit -->
                            @Html.Partial("Edit", Model.NhanVien)


                            <div class="pagination">
                                @if (Model.PageNumber > 1)
                                {
                                    <a href="@Url.Action("Index", "Staff", new { page = 1 })">First</a>
                                    @* <a href="@Url.Action("Index", "Staff", new { page = Model.PageNumber - 1 })">Previous</a> *@
                                }

                                @for (int i = 1; i <= Model.PageCount; i++)
                                {
                                    @if (i == Model.PageNumber)
                                    {
                                        <span class="active" style="color: #fff;background-color: #7ac29a;">@i</span> 
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Index", "Staff", new { page = i })">@i</a>
                                    }
                                }

                                @if (Model.PageNumber < Model.PageCount)
                                {
                                    @* <a href="@Url.Action("Index", "Staff", new { page = Model.PageNumber + 1 })">Next</a> *@
                                    <a href="@Url.Action("Index", "Staff", new { page = Model.PageCount })">Last</a>
                                }
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/js/SearchStaff.js"></script>
<script src="~/js/ConfirmDelete.js"></script>
<script src="~/js/DeleteMessage.js"></script>
<script src="~/js/editEmployee.js"></script>
